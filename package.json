{
  "name": "massu",
  "displayName": "massu",
  "description": "vscode custom plugin by massu heisenberg",
  "version": "0.0.1",
  "author": {
    "name": "massu heisenberg"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue"
  ],
  "main": "./src/client/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeCustomPlugin.spliceWithUnderscore",
        "title": "Splice with underscore"
      },
      {
        "command": "vscodeCustomPlugin.spliceWithUnderscoreAndLowerCase",
        "title": "Splice with underscore and to lower case"
      },
      {
        "command": "getFileState",
        "title": "File State"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "getFileState",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "getFileState",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CustomDotLog",
      "properties": {
        "customDotLog.config": {
          "type": "array",
          "description": "Customize how to log the result.",
          "default": [
            {
              "trigger": "log",
              "description": "custom dot log for console.log()",
              "format": "console.log"
            },
            {
              "trigger": "warn",
              "description": "custom dot log for console.warn()",
              "format": "console.warn"
            },
            {
              "trigger": "error",
              "description": "custom dot log for console.error()",
              "format": "console.error"
            },
            {
              "trigger": "table",
              "description": "custom dot log for console.table()",
              "format": "console.table"
            },
            {
              "trigger": "info",
              "description": "custom dot log for console.info()",
              "format": "console.info"
            },
            {
              "trigger": "dir",
              "description": "custom dot log for console.dir()",
              "format": "console.dir"
            }
          ],
          "items": {
            "type": "object",
            "additionalProperties": {
              "trigger": {
                "type": "string",
                "required": true
              },
              "description": {
                "type": "string",
                "required": true
              },
              "format": {
                "type": "string",
                "required": true
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
